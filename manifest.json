{
  "manifest_version": 3,
  "name": "KYC Autofill with Face Verification",
  "version": "1.0",
  "description": "Autofill Aadhaar details securely after facial verification.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "verify.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "libs/*",
        "libs/pdf.worker.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
